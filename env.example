# Backend Environment Variables
# Copy to .env and fill in your values for local development

# Redis Configuration
# For local development with Docker
REDIS_URL=redis://localhost:6379
# For production with Upstash (replace with your actual URL)
# REDIS_URL=rediss://default:password@host:port

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API Configuration
API_TITLE=Recipe Discovery API
API_DESCRIPTION=A simple FastAPI service for recipe discovery
API_VERSION=1.0.0

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
